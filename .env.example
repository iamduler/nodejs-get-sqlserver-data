# Server Configuration
PORT=3000

# SQL Server Database Configuration
DB_SERVER=localhost
DB_NAME=your_database
DB_USER=sa
DB_PASSWORD=your_password
DB_PORT=1433

# Database Options
# Set DB_ENCRYPT=true for Azure SQL Database
# Set DB_ENCRYPT=false for local SQL Server
DB_ENCRYPT=false

# Set DB_TRUST_CERT=true for local development (bypass certificate validation)
DB_TRUST_CERT=true

# Database Timeout Configuration (milliseconds)
# DB_CONNECTION_TIMEOUT: Thời gian chạy kết nối (mặc định: 60000 = 60s)
# DB_REQUEST_TIMEOUT: Thời gian chạy query hoàn thành (mặc định: 120000 = 2m)
# Tăng giá trị này nếu query lớn hoặc offset lớn
DB_CONNECTION_TIMEOUT=30000
DB_REQUEST_TIMEOUT=30000

# Database Table/View Configuration
DB_REVENUE_SCHEMA=dbo
DB_REVENUE_TABLE=DoanhThuVND
DB_REVENUE_DATE_COLUMN=Modified

# API Secret Key
API_SECRET_KEY=your_strong_secret_key